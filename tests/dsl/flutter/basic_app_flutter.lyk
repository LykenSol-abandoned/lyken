import 'package:flutter/material.dart';

// This app is a stateful, it tracks the user's current choice.
def BasicAppBarSample {
  mut _selectedChoice: Choice = choices[0], // The app's "state".

  void _select(Choice choice) {
    setState(() { // Causes the app to rebuild with the new _selectedChoice.
      _selectedChoice = choice;
    });
  }

  ..MaterialApp {
    home: Scaffold {
      appBar: AppBar {
        title: Text('Basic AppBar'),
        actions: [
          IconButton { // action button
            icon: Icon(choices[0].icon),
            on pressed { _select(choices[0]); },
          },
          IconButton { // action button
            icon: Icon(choices[1].icon),
            on pressed { _select(choices[1]); },
          },
          PopupMenuButton { // overflow menu
            onSelected: _select,
            itemBuilder: (BuildContext context) {
              return choices.skip(2).map((Choice choice) {
                return new PopupMenuItem<Choice>(
                  value: choice,
                  child: new Text(choice.title),
                );
              }).toList();
            },
          },
        ],
      },
      body: Padding {
        padding: const EdgeInsets.all(16.0),
        child: ChoiceCard {choice: _selectedChoice},
      },
    },
  }
}

def Choice {
  title: String,
  icon: IconData,
}

const List<Choice> choices = const <Choice>[
  const Choice(title: 'Car', icon: Icons.directions_car),
  const Choice(title: 'Bicycle', icon: Icons.directions_bike),
  const Choice(title: 'Boat', icon: Icons.directions_boat),
  const Choice(title: 'Bus', icon: Icons.directions_bus),
  const Choice(title: 'Train', icon: Icons.directions_railway),
  const Choice(title: 'Walk', icon: Icons.directions_walk),
];

def ChoiceCard {
  choice: Choice,

  ..Card {
    color: Colors.white,
    child: Center {
      child: Column {
        mainAxisSize: MainAxisSize.min,
        crossAxisAlignment: CrossAxisAlignment.center,
        children: [
          Icon(choice.icon) {
            size: 128.0,
            color: Theme.of(context).textTheme.display1.color
          },
          Text(choice.title) {
            style: Theme.of(context).textTheme.display1
          },
        ]
      }
    }
  }
}

void main() {
  runApp(new BasicAppBarSample());
}

